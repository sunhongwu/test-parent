<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:account-persist.properties"/>
    </bean>

    <bean id="accountPersistService" class="com.shw.test.account.presist.service.impl.AccountPersistServiceImpl">
        <property name="file" value="${persist.file}"/>
    </bean>

</beans>